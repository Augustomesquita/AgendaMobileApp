<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/formUserPicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="#C5C5C5"
                android:src="@drawable/profile_default" />


            <Button
                android:id="@+id/btnFormUserTakePicture"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/btn_edit"
                android:elevation="5dp"
                android:stateListAnimator="@null"></Button>

        </RelativeLayout>

        <EditText
            android:id="@+id/formUserNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome" />

        <EditText
            android:id="@+id/formUserEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EndereÃ§o" />

        <EditText
            android:id="@+id/formUserTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone" />

        <EditText
            android:id="@+id/formUserSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site" />

        <RatingBar
            android:id="@+id/formUserNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="10"
            android:numStars="5" />

    </LinearLayout>
</ScrollView>